{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest", // Registre os arquivos de definições de tipo de Jest com o compilador TypeScript.
      "node"
    ],
    "esModuleInterop": true, // caso contrário, Jest gerará muitos avisos no console.
    "emitDecoratorMetadata": true // caso contrário, Angular's Dependency Injection não funcionará com Jest.
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}